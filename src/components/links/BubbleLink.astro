---
const { icon, href } = Astro.props;
---

<a class="bubble" href={href} target="_blank">
	{icon ? <img src={icon} alt="" class="bubble__icon" /> : null}
	<span class="bubble__label"><slot /></span>
</a>

<style>
	a {
		padding: 8px 12px 8px 8px;
		display: flex;
		flex-direction: row;
		align-items: center;
		gap: 8px;
		background-color: var(--bg-2);
		border: 1px solid var(--border);
		border-radius: 20px;
		color: var(--text);
		text-decoration: none;
	}
	
	.bubble__icon {
		width: 20px;
        height: 20px;
	}

	.bubble__label {
		display: inline-block;
	}
</style>
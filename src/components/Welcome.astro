---
import BubbleLink from './links/BubbleLink.astro';

import github from '../assets/logos/github.svg'
import gitlab from '../assets/logos/gitlab.svg'
import linkedin from '../assets/logos/linkedin.svg'
import mail from '../assets/logos/mail.svg'
import profile from '../assets/self-img.webp'
import StatusBubbleCard from './cards/StatusBubbleCard.astro';
import Contributions from './Contributions.astro';
import { Image } from 'astro:assets';

const username = "ellukitas-123";
---

<main>
	<section class="main__content">
		<Image class="profile__image" alt="Profile" src={profile} />
		<section id="hero">
			<h1>Lucas Winand Osete</h1>
			<p class="soft">Interesado en el desarrollo web fullstack</p>
			<section id="links">
				<StatusBubbleCard status="available" />
				<BubbleLink icon={github.src} href="https://github.com/ellukitas-123">ellukitas-123</BubbleLink>
				<BubbleLink icon={gitlab.src} href="https://gitlab.com/ellukitas-123">ellukitas-123</BubbleLink>
				<BubbleLink icon={linkedin.src} href="https://www.linkedin.com/in/lucas-winand-osete-1a1092367/">Lucas Winand Osete</BubbleLink>
				<BubbleLink icon={mail.src} href="mailto:lucas.winand@hotmail.es">lucas.winand@hotmail.es</BubbleLink>
			</section>
		</section>
	</section>
	<Contributions username={username} />

	<!-- Scroll hint: indicates more content below -->
	<a href="#experience" class="scroll-hint" aria-label="Ver mÃ¡s contenido">
		<svg class="chev" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
			<polyline points="6 9 12 15 18 9"></polyline>
		</svg>
		<svg class="chev chev-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
			<polyline points="6 9 12 15 18 9"></polyline>
		</svg>
	</a>
</main>

<style>
	main {
		position: relative;
		width: 100vw;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		padding: 16px;
	}

	.main__content {
		max-width: 50vw;
		flex-direction: row;
		align-items: start;
		justify-content: center;
	}

	#hero {
		display: flex;
		align-items: start;
		flex-direction: column;
		justify-content: center;
		padding: 16px;
	}

	h1 {
		margin: 0;
		font-size: 3rem;
	}

	#links {
		display: flex;
		gap: 8px;
		flex-wrap: wrap;
	}

	p {
		margin-bottom: 4px;
		font-size: 16px;
		line-height: 24px;
		letter-spacing: -0.006em;
		opacity: 0.5;
	}

	.profile__image {
		width: 120px;
		height: 120px;
		aspect-ratio: 1 / 1;
		border-radius: 50%;
	}

	@media screen and (max-height: 368px) {
	}

	@media screen and (max-width: 768px) {
	}

	/* Scroll hint */
	.scroll-hint {
		position: absolute;
		left: 50%;
		bottom: 20px;
		transform: translateX(-50%);
		display: flex;
		flex-direction: column;
		gap: 0;
		text-decoration: none;
		color: var(--text-soft);
		z-index: 10;
	}

	.scroll-hint:hover { color: var(--text); }

	.chev {
		width: 28px;
		height: 28px;
		opacity: 0.8;
		transform-origin: center;
		animation: hint-bounce 2s infinite ease-in-out;
	}

	.chev-2 { animation-delay: 0.12s; opacity: 0.6; margin-top: -6px; }

	/* overlap if needed (small screens) */
	@media (max-width: 480px) {
		.chev-2 { margin-top: -4px; }
	}

	@keyframes hint-bounce {
		0% { transform: translateY(0); opacity: 0.6; }
		50% { transform: translateY(8px); opacity: 1; }
		100% { transform: translateY(0); opacity: 0.6; }
	}
</style>
